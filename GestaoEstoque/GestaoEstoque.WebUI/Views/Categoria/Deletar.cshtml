@model GestaoEstoque.Application.DTOs.CategoriaDTO
@{
    ViewData["Title"] = "";
}
<h3>Deletar Categoria</h3>

<h4>Deseja realmente deletar a categoria @Model.Nome?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para categoria</a>
    </form>
</div>
