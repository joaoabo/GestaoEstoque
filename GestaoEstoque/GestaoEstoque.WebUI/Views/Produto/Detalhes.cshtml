@model GestaoEstoque.Application.DTOs.ProdutoDTO

@{
    ViewData["Title"] = "Informações do produto";
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Imagem)</dt>
        <dd class="col-sm-10">
            @if (!ViewBag.ImagemExiste)
            {
                <img src="~/image/produto-sem-imagem.webp" class="rounded-circle"
                     height="300" width="300" asp-append-version="true" />
            }
            else
            {
                <img src="~/image/@Model.Imagem" class="rounded-circle"
                     height="300" width="300" asp-append-version="true" />
            }
        </dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Preco)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Preco)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estoque)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Estoque)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Categoria)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Categoria.Nome)</dd>
    </dl>
</div>
<div>
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index">Voltar para produtos</a>
</div>